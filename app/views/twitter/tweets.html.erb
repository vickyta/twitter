<div>
	<h3>Tweets con la palabra "<i><%= @palabra %></i>"</h3>
</div>

<form class="form-horizontal" method="post" action="<%= guardar_path @word %>">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Imagen</th>
                <th>Usuario</th>
                <th>Tweet</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            <% @tweets.each_with_index do |item, index| %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><img src="<%= item.profile_image_url %>"/></td>
                    <td><%= item.from_user %></td>
                    <td><%= item.text %></td>
                    <td><%= item.created_at %></td>
                </tr>
            <% end %>   
        </tbody>
    </table>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="icon-ok icon-white"></i>
            Guardar Tweets
        </button>
     </div>
</form>