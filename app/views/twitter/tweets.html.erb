<div>
	<h3>Tweets con la palabra "<i><%= @palabra %></i>"</h3>
</div>

<form class="form-horizontal" method="post" action="<%= guardar_path %>">
    <input type="hidden" name="busqueda[word]" value="<%= @palabra %>">
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>#</th>
                <th>Imagen</th>
                <th>Usuario</th>
                <th>Tweet</th>
            </tr>
        </thead>
        <tbody>
            <% @tweets.each_with_index do |item, index| %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><img src="<%= item.profile_image_url %>"/><input type="hidden" value="<%= item.profile_image_url %>" name="tweets[][image]"></td>
                    <td><%= item.from_user %><input type="hidden" value="<%= item.from_user %>" name="tweets[][user_name]"></td>
                    <td><%= item.text %><input type="hidden" value="<%= item.text %>" name="tweets[][text]"></td>
                </tr>
            <% end %>   
        </tbody>
    </table>
    <div class="form-actions">
        <button type="submit" class="btn btn-primary">
            <i class="icon-ok icon-white"></i>Guardar Tweets
        </button>
     </div>
</form>